<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.nnxy.testserver.mapper.StudentMapper">

    <select id="queryByNo" resultType="cn.nnxy.testserver.entity.Student">
        select * from t_student where stuno = #{stuno}
    </select>
    <select id="getAll" resultType="cn.nnxy.testserver.entity.Student">
        select * from t_student
    </select>

    <select id="queryByName" resultType="cn.nnxy.testserver.entity.Student">
        select * from t_student where name like concat(concat('%',#{test}),'%')
    </select>

    <insert id="insert"> insert into t_student (stuno, name, major) value (#{stuno},#{name},#{major}) </insert>

    <update id="updateStu">
        update t_student
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="major != null and major != ''">major = #{major}</if>
        </set>
        where stuno = #{stuno}
    </update>

    <delete id="deleteById">
        delete from t_student where stuno= #{stuno}
    </delete>
</mapper>